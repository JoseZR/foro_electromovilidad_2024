---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import FocusSegments from "../components/FocusSegments.astro";
import Schedule from "../components/Program.astro";
import Speakers from "../components/Speakers.astro";
import { Gallery } from "../components/Gallery.jsx";
import { Register } from "../components/Register/Register.jsx";

import { getI18N } from "../i18n/index.js";
const i18n = getI18N(Astro.currentLocale);

const thankYouPagePath =
  Astro.currentLocale === "en"
    ? "/en/thanks-for-registering"
    : `/gracias-por-registrarte`;
---

<Layout title={`IGECO | ${i18n.title}`}>
  <Hero />
  <main>
    <FocusSegments />
    <!-- <Schedule /> -->
    <!-- <Speakers /> -->

    <section id="gallery" class="w-full min-h-fit mt-10">
      <h2
        class="mb-6 text-black text-3xl md:text-4xl lg:text-5xl font-medium font-open-sans leading-none uppercase text-center"
      >
        {i18n.gallery.title}
      </h2>
      <div class="py-4 px-8 md:py-6 md:px-16 lg:py-8 lg:px-24 border-t-2 border-black">
        <Gallery client:visible />
      </div>
    </section>

    <section id="register" class="w-full min-h-fit py-4 px-8 md:py-6 md:px-16 lg:py-8 lg:px-24 relative">
      <h2 class="mb-4 text-black text-3xl md:text-4xl lg:text-5xl font-normal font-jersey leading-none">{i18n.register.title}</h2>
      <Register
        client:visible
        i18n={i18n.register.form}
        thankYouPagePath={thankYouPagePath}
      />
    </section>
      
  </main>
</Layout>

